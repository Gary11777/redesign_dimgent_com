{
  "name": "redesign_dimgent_com",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./src/input.css -o ./public/assets/css/output.css --minify",
    "watch:css": "npx @tailwindcss/cli -i ./src/input.css -o ./public/assets/css/output.css --watch",
    "build:js": "esbuild src/app.js --bundle --minify --outfile=public/assets/js/app.js",
    "watch:js": "esbuild src/app.js --bundle --outfile=public/assets/js/app.js --watch",
    "build": "npm run build:css && npm run build:js",
    "dev": "npm run watch:css & npm run watch:js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17"
  },
  "dependencies": {
    "alpinejs": "^3.15.1"
  }
}
